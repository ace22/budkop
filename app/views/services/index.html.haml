%h1 Listing services

%table
  %tr
    %th Title
    %th Description
    %th Image url

- @services.each do |service|
  %tr
    %td
      =h service.title
    %td
      =h service.description
    %td
      =h service.image_url
    %td
      = link_to 'Show', service
    %td
      = link_to 'Edit', edit_service_path(service)
    %td
      = link_to 'Destroy', service, :confirm => 'Are you sure?', :method => :delete

= link_to 'New service', new_service_path
