%h1 Login

- form_for @drone_session, :url => drone_session_path do |f|  
  = f.error_messages

  #filed  
    = f.label :login
    = f.text_field :login
  
  #field
    = f.label :password
    = f.password_field :password

  #field
    = f.check_box :remember_me
    = f.label :remember_me

  #actions
    = f.submit "Login"

